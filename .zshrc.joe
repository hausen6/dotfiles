# prezto
if [[ -e ~/.zprezto/init.zsh ]]; then
	source ~/.zprezto/init.zsh
fi

# alias
alias edshell="vim $HOME/.zshrc.joe"
alias reshell="exec $SHELL"

# python
# pyenv
if [ -d ~/.pyenv ]; then
	export PATH="$HOME/.pyenv/shims:$HOME/.pyenv/bin:$PATH"
	eval "$(pyenv init -)"
	eval "$(pyenv virtualenv-init -)"
fi
