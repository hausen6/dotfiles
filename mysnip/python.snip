snippet     new
alias       new
    # -*- coding: ${1:TARGET} -*-
    import os
    import sys
    import shutil
    from glob import glob

    def main():
        ${2:TARGET}

    if __name__ == '__main__':
        main()

snippet     cread
alias       cread
    for line in codecs.open(${1:File}, '${2:Mode}', '${3:Unicode}'):
        ${4:TARGET}

snippet     cwrite
alias       cwrite
    with codecs.open(${1:File}, '${2:Mode}', '${3:Unicode}') as ${4:F object}:
        ${5:TARGET}
