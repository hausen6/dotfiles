#! /bin/bash

# 既にファイルorリンクがあれば削除する
if test -L ~/_vimrc; then
	rm ~/_vimrc
	echo rm _vimrc file
fi
if test -e ~/_gvimrc ; then
	rm ~/_gvimrc
fi
if test -e ~/.latexmkrc ; then
	rm ~/.latexmkrc
fi

# シンボリックリンクを作成する
ln -s ~/dotfiles/_vimrc ~/_vimrc
ln -s ~/dotfiles/_gvimrc ~/_gvimrc
ln -s ~/dotfiles/.latexmkrc ~/.latexmkrc
