snippet     documentclass, dc
alias       \documentclass
    \documentclass[11pt, a4paper]{jsarticle}
    % ******* プリアンブル ********
    \usepackage{amsmath}
    \usepackage{graphicx}
    \usepackage[top=30truemm,bottom=30truemm,left=25truemm,right=25truemm]{geometry}
    \usepackage{enumitem}

    % 各定義
    \renewcommand{\figurename}{Fig.}
    \renewcommand{\tablename}{Table.}
    \def\eqref#1{Eq.(\ref{#1})}
    \def\figref#1{Fig.\ref{#1}}
    \def\tabref#1{Table.\ref{#1}}
    \def\algref#1{Algorithm.\ref{#1}}
    \def\argmax{\mathop{\rm argmax}}
    %
    % ***********************
    % ******* Title *********
    \title{${1:TARGET}}
    \author{${2:TARGET}}
    \date{${3:TARGET}}
    %
    % ***********************
    \begin{document}
    \maketitle
    %
    ${4:TARGET}
    \end{document}

snippet		beamer
alias 		beamer
	\documentclass[dvipdfmx,11pt,notheorems]{beamer}
	%%%% 和文用 %%%%%
	\usepackage{bxdpx-beamer}
	\usepackage{pxjahyper}
	\usepackage{minijs}                            % 和文用
	\renewcommand{\kanjifamilydefault}{\gtdefault} % 和文用
	\usepackage{color}
	\usepackage{listings, jlisting}
	\renewcommand{\lstlistingname}{Code}
	% code表示設定
	\lstset{language=python,%
			basicstyle=\footnotesize,%
			commentstyle=\color{green}\itshape,
			stringstyle=\color{red},
			keywordstyle=\color{blue}\bfseries,
			frame=single,framesep=2pt,
			showstringspaces=false,
			tabsize=4,
		}%

	%%%% スライドの見た目 %%%%%
	\usetheme{Madrid}
	\usefonttheme{professionalfonts}
	\setbeamertemplate{frametitle}[default][center]
	\setbeamertemplate{navigation symbols}{}
	\setbeamercovered{transparent} % 隠すoverlayの透明度
	\setbeamertemplate{items}[default]
	\setbeamertemplate{footline}[page number]
	% ヘッダにセクションのナビゲーションをつける
	\setbeamertemplate{headline}{
	\leavevmode       
	  \hbox{%
		\begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.125ex]{palette quaternary}%
		\insertsectionnavigationhorizontal{\paperwidth}{}{\hskip0pt plus1filll}
		\end{beamercolorbox}%
	  }
	}
	%%%%

	%%%%% フォント基本設定 %%%%%
	\usepackage[T1]{fontenc}%8bit フォント
	\usepackage{textcomp}%欧文フォントの追加
	\usepackage[utf8]{inputenc}%文字コードをUTF-8
	\usepackage{otf}%otfパッケージ
	\usepackage{lxfonts}%数式・英文ローマン体を Lxfont にする
	\usepackage{bm}%数式太字
	%%%%%%%%%%
	 
	\title[${1: SHORT TITLE}]{${2: TITLE}}             % [略タイトル]{タイトル}
	\author[${3: SHORT AUTHOR}]{${4: AUTOR}}           % [略名前]{名前}
	\institute[${5: SHORT INSTITUTE}]{${6: INSTITUTE}} % [略所属]{所属}
	\date{\today}                                      % 日付
	\begin{document}

	\begin{frame}[plain]\frametitle{}
	\titlepage %表紙
	\end{frame}

	\end{document}

